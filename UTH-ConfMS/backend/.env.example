# Backend environment variables example
# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/confms_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password

# Redis
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRATION_MS=86400000
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# Server
SERVER_PORT=8080

# Firebase
FIREBASE_PROJECT_ID=uth-confms
FIREBASE_CREDENTIALS=/run/secrets/firebase-sa.json

# Email Configuration
# Get Gmail App Password: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=UTH-ConfMS <your_email@gmail.com>
EMAIL_ENABLED=true
EMAIL_ASYNC=true

# Upload
APP_UPLOAD_DIR=/app/uploads
APP_BASE_URL=http://localhost:8080

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Service
AI_SERVICE_URL=http://ai-service:8000
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend
FRONTEND_BASE_URL=http://localhost:5173

# Reset Password & OTP
RESET_PASSWORD_TTL_MINUTES=15
OTP_TTL_MINUTES=5

# Firebase User Creation
CREATE_FIREBASE_USER=false
